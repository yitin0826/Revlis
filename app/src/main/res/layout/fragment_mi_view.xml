<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@null"
    android:backgroundTint="@null"
    tools:context=".Fragment.MiView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_ecg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_mi1"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/dp_20">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_4"
                        android:src="@drawable/mi_grade"
                        android:background="@drawable/background_mi"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="分數"
                        android:textSize="@dimen/sp_20"
                        android:fontFamily="@font/glowsanssc_condensed_medium"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="70"
                    android:textSize="@dimen/sp_60"
                    android:textColor="@color/green"
                    android:fontFamily="@font/rajdhani_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/linear_mi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/img_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_4"
                        android:src="@drawable/mi_change"
                        android:background="@drawable/background_mi"/>
                    <TextView
                        android:id="@+id/title_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toRightOf="@+id/img_change"
                        android:text="心率變化"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/glowsanssc_condensed_medium"/>
                    <TextView
                        android:id="@+id/txt_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/title_change"
                        android:text="regular"
                        android:textSize="@dimen/sp_20"
                        android:fontFamily="@font/rajdhani_bold"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linear_mi3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/linear_mi2"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/linear_mi2">
                    <ImageView
                        android:id="@+id/img_beat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_4"
                        android:src="@drawable/mi_beat"
                        android:background="@drawable/background_mi"/>
                    <TextView
                        android:id="@+id/title_beat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toRightOf="@+id/img_beat"
                        android:text="心跳"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/glowsanssc_condensed_medium"/>
                    <TextView
                        android:id="@+id/txt_beat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/title_beat"
                        android:text="70"
                        android:textSize="@dimen/sp_20"
                        android:fontFamily="@font/rajdhani_bold"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linear_mi4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/linear_mi3"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/linear_mi3">
                    <ImageView
                        android:id="@+id/img_diffuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_4"
                        android:src="@drawable/mi_diffuse"
                        android:background="@drawable/background_mi"/>
                    <TextView
                        android:id="@+id/title_diffuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toRightOf="@+id/img_diffuse"
                        android:text="心跳擴散度"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/glowsanssc_condensed_medium"/>
                    <TextView
                        android:id="@+id/txt_diffuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/title_diffuse"
                        android:text="16%"
                        android:textSize="@dimen/sp_20"
                        android:fontFamily="@font/rajdhani_bold"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            android:text="COMPARE"
            android:textSize="@dimen/sp_32"
            android:textColor="@color/green"
            android:fontFamily="@font/rajdhani_bold"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_compare"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"/>

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/indicator_compare"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_50"
            app:ci_drawable="@drawable/indicator_radius"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>